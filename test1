---
- name: Enroll RHEL system to Red Hat Satellite
  hosts: all
  become: true
  gather_facts: true

  vars_prompt:
    - name: "activation_key"
      prompt: "Enter the activation key for this system"
      private: no
    - name: "hostgroup"
      prompt: "Enter the host group name"
      private: no

  tasks:
    - name: Install Katello CA certificate
      yum:
        name: "http://{{ satellite_fqdn }}/pub/katello-ca-consumer-latest.noarch.rpm"
        state: present
        disable_gpg_check: true

    - name: Download bootstrap.py
      get_url:
        url: "http://{{ satellite_fqdn }}/pub/bootstrap.py"
        dest: "/tmp/bootstrap.py"
        mode: '0755'

    - name: Register the system to Satellite using bootstrap.py
      shell: >
        /usr/bin/python3 /tmp/bootstrap.py
        --server {{ satellite_fqdn }}
        --organization "{{ org }}"
        --location "{{ location }}"
        --activationkey "{{ activation_key }}"
        --hostgroup "{{ hostgroup }}"
        --force
      args:
        creates: /etc/foreman-agent
