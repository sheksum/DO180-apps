by#!/usr/bin/env bash
set -euo pipefail

SRC_REG=registry.tabnine.com
DST_REG=plnx-ai-registry.calix.local:5000

while read -r IMAGE; do
  [[ -z "$IMAGE" ]] && continue

  # Strip source registry prefix
  IMAGE_PATH="${IMAGE#${SRC_REG}/}"
  DST_IMAGE="${DST_REG}/${IMAGE_PATH}"

  echo "▶ Pulling  $IMAGE"
  docker pull "$IMAGE"

  echo "▶ Tagging  $DST_IMAGE"
  docker tag "$IMAGE" "$DST_IMAGE"

  echo "▶ Pushing  $DST_IMAGE"
  docker push "$DST_IMAGE"

  echo "✔ Done: $DST_IMAGE"
  echo
done < tabnine-images.txt


TAG="latest"

DIGEST=$(curl -sI \
  -H "Accept: application/vnd.docker.distribution.manifest.v2+json" \
  http://$REGISTRY/v2/$REPO/manifests/$TAG \
  | awk '/Docker-Content-Digest/ {print $2}' | tr -d $'\r')

echo "Digest = $DIGEST"

REGISTRY=localhost:5000
FILE=/opt/registry/images.txt

while read IMAGE; do
  REPO=$(echo "$IMAGE" | cut -d: -f1)
  TAG=$(echo "$IMAGE" | cut -s -d: -f2)
  [ -z "$TAG" ] && TAG=latest

  DIGEST=$(curl -sI \
    -H "Accept: application/vnd.docker.distribution.manifest.v2+json" \
    http://$REGISTRY/v2/$REPO/manifests/$TAG \
    | awk '/Docker-Content-Digest/ {print $2}' | tr -d $'\r')

  if [ -n "$DIGEST" ]; then
    echo "[DRY-RUN] Would delete: $REPO:$TAG ($DIGEST)"
  else
    echo "[SKIP] $REPO:$TAG (not found)"
  fi
done < "$FILE"

REGISTRY=localhost:5000
FILE=/opt/registry/images.txt

while read IMAGE; do
  REPO=$(echo "$IMAGE" | cut -d: -f1)
  TAG=$(echo "$IMAGE" | cut -s -d: -f2)
  [ -z "$TAG" ] && TAG=latest

  DIGEST=$(curl -sI \
    -H "Accept: application/vnd.docker.distribution.manifest.v2+json" \
    http://$REGISTRY/v2/$REPO/manifests/$TAG \
    | awk '/Docker-Content-Digest/ {print $2}' | tr -d $'\r')

  if [ -n "$DIGEST" ]; then
    echo "[DELETE] $REPO:$TAG"
    curl -s -X DELETE \
      http://$REGISTRY/v2/$REPO/manifests/$DIGEST
  else
    echo "[SKIP] $REPO:$TAG (not found)"
  fi
done < "$FILE"


events {
    worker_connections 1024;
}

http {
    client_max_body_size 0;

    server {
        listen 443 ssl;
        server_name plnx-ai-registry.calix.local;

        ssl_certificate     /etc/nginx/certs/domain.crt;
        ssl_certificate_key /etc/nginx/certs/domain.key;

        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;

        # Registry UI
        location / {
            proxy_pass http://registry-ui:80;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Docker Registry API
        location /v2/ {
            proxy_pass http://registry:5000;

            proxy_http_version 1.1;
            proxy_request_buffering off;
            proxy_buffering off;

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            proxy_read_timeout 900;
            proxy_send_timeout 900;
        }
    }
}

