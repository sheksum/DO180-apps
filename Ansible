---
- name: Patch Ubuntu (module-only, batched 10, auto-reboot)
  hosts: ubuntu
  become: true
  gather_facts: true
  strategy: linear
  serial: 10

  tasks:
    - name: Clean apt cache
      apt:
        clean: yes

    - name: Update apt cache
      apt:
        update_cache: true
        cache_valid_time: 0
        force_apt_get: true
        lock_timeout: 600

    - name: Full upgrade within current release
      apt:
        upgrade: dist
        autoremove: true
        autoclean: true
        force_apt_get: true
        lock_timeout: 600
      environment:
        DEBIAN_FRONTEND: noninteractive

    - name: Check if reboot is required
      stat:
        path: /var/run/reboot-required
      register: reboot_flag

    - name: Reboot if required
      reboot:
        msg: "Rebooting after OS patch"
        reboot_timeout: 1800
        post_reboot_delay: 20
        test_command: "whoami"
      when: reboot_flag.stat.exists
