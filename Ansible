---
- name: Patch Ubuntu systems (apply OS updates within same release)
  hosts: ubuntu
  become: true
  gather_facts: true

  tasks:
    - name: Update apt cache
      apt:
        update_cache: true
        cache_valid_time: 3600

    - name: Apply all available package updates (dist-upgrade)
      apt:
        upgrade: dist         # same as `apt-get dist-upgrade`
        autoremove: true
        autoclean: true
      register: upgrade_result

    - name: Check if reboot is required
      stat:
        path: /var/run/reboot-required
      register: reboot_required

    - name: Reboot if required
      reboot:
        msg: "Rebooting system to complete OS patching"
        reboot_timeout: 1800
        post_reboot_delay: 20
      when: reboot_required.stat.exists
