---
- name: Patch Ubuntu systems and auto-reboot if required
  hosts: ubuntu
  become: true
  gather_facts: true
  serial: 50

  tasks:
    - name: Clean apt cache before updating
      apt:
        clean: yes

    - name: Update apt cache
      apt:
        update_cache: true
        cache_valid_time: 3600
        force_apt_get: true
        lock_timeout: 600

    - name: Perform full system upgrade
      apt:
        upgrade: dist
        autoremove: true
        autoclean: true
        force_apt_get: true
        lock_timeout: 600
      environment:
        DEBIAN_FRONTEND: noninteractive

    - name: Check if reboot is required
      stat:
        path: /var/run/reboot-required
      register: reboot_flag

    - name: Reboot if required
      reboot:
        msg: "Rebooting to complete OS patching"
        connect_timeout: 30
        reboot_timeout: 1800
        pre_reboot_delay: 0
        post_reboot_delay: 20
        test_command: "whoami"
      when: reboot_flag.stat.exists

    - name: Report final status
      debug:
        msg: >-
          {{ 'Rebooted after patching' if reboot_flag.stat.exists
             else 'No reboot needed' }}
