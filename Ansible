---
- name: Patch Ubuntu (module-only, batched 10, auto-reboot, single-lock fix)
  hosts: ubuntu
  become: true
  gather_facts: true
  strategy: linear
  serial: 10

  tasks:
    - name: apt clean (retry after removing lists lock if needed)
      block:
        - name: Clean apt cache
          apt:
            clean: yes
            lock_timeout: 600
      rescue:
        - name: Remove /var/lib/apt/lists/lock
          file:
            path: /var/lib/apt/lists/lock
            state: absent
        - name: Clean apt cache (retry)
          apt:
            clean: yes
            lock_timeout: 600

    - name: Update apt cache
      apt:
        update_cache: true
        cache_valid_time: 3600
        force_apt_get: true
        lock_timeout: 600

    - name: Full upgrade within current release
      apt:
        upgrade: dist
        autoremove: true
        autoclean: true
        force_apt_get: true
        lock_timeout: 600
      environment:
        DEBIAN_FRONTEND: noninteractive

    - name: Check if reboot is required
      stat:
        path: /var/run/reboot-required
      register: reboot_flag

    - name: Reboot if required
      reboot:
        msg: "Rebooting after OS patch"
        reboot_timeout: 1800
        post_reboot_delay: 20
        test_command: "whoami"
      when: reboot_flag.stat.exists
