default-lease-time 3600;
max-lease-time 7200;
authoritative;
log-facility local7;

subnet 10.168.0.0 netmask 255.255.252.0 {
    range 10.168.2.100 10.168.2.200;
    option routers 10.168.0.1;
    option domain-name-servers 8.8.8.8;
    next-server 10.168.0.58;

    if exists user-class and option user-class = "PXEClient" {
        if option arch = 00:07 or option arch = 00:08 {
            filename "EFI/BOOT/grubx64.efi";  # UEFI PXE Boot
        } else {
            filename "pxelinux.0";  # Legacy BIOS PXE Boot
        }
    }
}
