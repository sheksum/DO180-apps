#!/bin/bash
# wan_monitor.sh
iface="eth0"
limit=1600  # Mbps
current=$(ifstat -i $iface 1 1 | awk 'NR==3 {print int($1)}')

if [ "$current" -gt "$limit" ]; then
  echo "$(date) - ALERT: $iface outbound ${current}Mbps exceeds 80% threshold" \
  | mail -s "WAN Utilization Alert" netops@example.com
fi
