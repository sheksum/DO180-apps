events {
  worker_connections 1024;
}

http {
  client_max_body_size 0;

  upstream registry_backend {
    server registry:5000;
  }

  upstream registry_ui_backend {
    server registry-ui:80;
  }

  upstream oauth2_proxy {
    server oauth2-proxy:4180;
  }

  server {
    listen 443 ssl;
    server_name plnx-ai-registry.calix.local;

    ssl_certificate     /etc/nginx/certs/domain.crt;
    ssl_certificate_key /etc/nginx/certs/domain.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # ---- oauth2-proxy endpoints ----
    location /oauth2/ {
      proxy_pass http://oauth2_proxy;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ---- Registry UI (protected) ----
    location / {
      auth_request /oauth2/auth;
      error_page 401 = /oauth2/sign_in;

      proxy_pass http://registry_ui_backend;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ---- Docker Registry API (protected) ----
    location /v2/ {
      auth_request /oauth2/auth;
      error_page 401 = /oauth2/sign_in;

      proxy_pass http://registry_backend;
      proxy_http_version 1.1;
      proxy_request_buffering off;
      proxy_buffering off;

      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;

      proxy_read_timeout 900;
      proxy_send_timeout 900;
    }
  }
}