root@pln-devhoffman:/etc/apache2/sites-enabled# cat 008-tools.conf 
<VirtualHost *:80>
    ServerName tools-dev.calix.local
    Redirect permanent / https://tools-dev.calix.local/
</VirtualHost>
<VirtualHost *:443>
  ServerName tools-dev.calix.local
  SSLEngine on
  SSLCertificateFile /etc/ssl/tools-dev/tools-dev.calix.com.cert
  SSLCertificateKeyFile /etc/ssl/tools-dev/tools-dev.calix.com.key
  ProxyPass / http://localhost:8085/
  ProxyPassReverse / http://localhost:8085/
</VirtualHost>

