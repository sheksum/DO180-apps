FULLNAME="Haj Suma"; \
FIRST=$(echo "$FULLNAME" | awk '{print $1}'); \
LAST=$(echo "$FULLNAME"  | awk '{print $NF}'); \
USER=$(ipa user-find "$LAST" --all | awk -v first="$FIRST" -v last="$LAST" '
/User login:/ {user=$3}
/First name:/ {fname=$3}
/Last name:/  {lname=$3}
END { if (fname==first && lname==last) print user }
'); \
[ -z "$USER" ] && echo "User not found for: $FULLNAME" && exit 1; \
UID=$(ipa user-show "$USER" | awk '/UID: /{print $2}'); \
echo "$USER $UID"
