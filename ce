# Disable standard DHCP (Windows DHCP will assign IPs)
port=0

# Enable ProxyDHCP Mode (Only PXE, No IPs assigned)
dhcp-range=10.168.0.0,proxy

# Define the PXE Boot Server
dhcp-boot=pxelinux.0,pxeserver,10.168.0.58

# Enable TFTP
enable-tftp
tftp-root=/var/lib/tftpboot

# Define PXE Boot Options for Legacy BIOS and UEFI Clients
pxe-service=X86PC, "PXE Boot BIOS", pxelinux.0
pxe-service=EFI64, "PXE Boot UEFI", EFI/BOOT/shimx64.efi
pxe-service=EFI64-Secure, "PXE Boot UEFI Secure", EFI/BOOT/shimx64.efi
